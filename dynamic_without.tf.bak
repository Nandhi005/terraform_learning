provider "aws" {
  region = "ap-south-1"
}

resource "aws_security_group" "allow_tl" {
  name        = "allow_tls"
  description = "Allow TLS inbound traffic and all outbound traffic"

  tags = {
    Name = "allow_tls"
  }
}
resource "aws_vpc_security_group_ingress_rule" "allow_tls_ipv4" {
  count             = length(var.sg_ports)
  security_group_id = aws_security_group.allow_tl.id
  cidr_ipv4         = "0.0.0.0/32"
  from_port         = element(var.sg_ports, count.index)
  ip_protocol       = "tcp"
  to_port           = element(var.sg_ports, count.index)
}
