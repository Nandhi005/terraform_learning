provider "aws" {
    region = "ap-south-1"
}
resource "aws_security_group" "allow_tls" {
  name        = "allow_tls"
  description = "Allow TLS inbound traffic and all outbound traffic"

  tags = {
    Name = "allow_tls"
  }

dynamic "ingress" {
    for_each = var.sg_ports
    content {
    cidr_blocks         = ["0.0.0.0/0"]
    from_port         = ingress.value
    protocol       = "tcp"
    to_port           = ingress.value
    }
  }
}

